    <style>
    .project-item {
        position: relative;
        overflow: hidden;
        border-radius: 5px;
    }

        .project-item img {
            width: 100%;
            height: auto;
            transition: transform 0.3s;
            image-rendering: pixelated; /* Ngăn không cho ảnh bị mờ */
        }

    .project-info {
        background-color: rgba(255, 255, 255, 0.9);
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%; /* Thay đổi giá trị này thành phần trăm (%) */
        padding: 10px;
        box-sizing: border-box;
        transition: transform 0.3s;
        transform: translateY(100%);
    }

    .project-item:hover .project-info {
        transform: translateY(0);
    }

    .project-item:hover img {
        transform: scale(1.1);
    }

    .project-item {
        transition: box-shadow 0.3s ease;
        border-radius: 10px;
    }

        .project-item:hover {
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

            .project-item:hover .project-info {
                transform: translateY(0);
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
            }

    .pagination-buttons {
        margin-top: 20px;
    }

        .pagination-buttons button {
            margin-right: 10px;
            background-color: white;
            color: green;
            border-color: green;
            border-radius: 5px;
        }

    .btnhv:hover {
        background-color: green;
        color: white;
        border-color: green;
        border-radius: 5px;
    }

    </style>

